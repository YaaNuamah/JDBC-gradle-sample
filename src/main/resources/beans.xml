<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name ="driverClassName" value="org.postgresql.Driver" />
        <property name ="url" value="jdbc:postgresql:northwind"/>
        <property name ="username" value="yaa-fordjour"/>
        <property name="password" value="turntabl"/>
</bean>

    <bean id="jdbcTemplate" class="org.springframework.jdbc.core.CustomerJDBCTemplate">
        <property name ="dataSource" ref="dataSource" />
    </bean>

    <bean id="custDao" class="io.turntabl.beans.CustomerDAOImpl">
        <property name ="jdbcTemplate" ref="jdbcTemplate" />
    </bean>


    <bean id="productDao" class="io.turntabl.beans.ProductDAOImpl">
        <property name ="jdbcTemplate" ref="jdbcTemplate" />
    </bean>

</beans>


